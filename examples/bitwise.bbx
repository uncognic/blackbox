%asm
; Bitwise ops test
%main
    ; AND: 6 & 3 = 2
    MOV R00, 6
    MOV R01, 3
    AND R00, R01
    PRINT_REG R00 ; Expected: 2
    NEWLINE

    ; OR: 6 | 1 = 7
    MOV R02, 6
    MOV R03, 1
    OR R02, R03
    PRINT_REG R02 ; Expected: 7
    NEWLINE

    ; XOR: 6 ^ 3 = 5
    MOV R04, 6
    MOV R05, 3
    XOR R04, R05
    PRINT_REG R04 ; Expected: 5
    NEWLINE

    ; NOT (bitwise): ~0 = -1
    MOV R06, 0
    NOT R06
    PRINT_REG R06 ; Expected: -1
    NEWLINE

    ; NOT (bitwise): ~1 = -2
    MOV R07, 1
    NOT R07
    PRINT_REG R07 ; Expected: -2
    NEWLINE

    ; NOT (bitwise): ~255 = -256
    MOV R08, 255
    NOT R08
    PRINT_REG R08 ; Expected: -256
    NEWLINE

    HALT